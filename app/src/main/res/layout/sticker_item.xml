<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:backgroundTint="@color/lightgrey"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <TextView
            android:textColor="@color/black"
            android:id="@+id/stickerTitleAdvertiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Title"
            android:ellipsize="end"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/stickerDescriptionAdvertiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stickerTitleAdvertiser"
            android:textSize="20sp"
            android:text="Description"
            />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/rewardTextAdvertiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stickerDescriptionAdvertiser"
            android:text="rÃ©compense : 25 points par session"
            />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/participantsTextAdvertiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rewardTextAdvertiser"
            android:text="participants : 6 / 10"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>