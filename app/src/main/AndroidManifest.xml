<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pubeo">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Particular.ParticularSignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Particular.ParticularSignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Particular.ParticularCreateProfilActivity"
            android:theme="@style/AppThemeWhiteAndBlackNoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Advertiser.AddStickerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeWhiteAndBlack"
            android:parentActivityName=".Advertiser.HomeActivity"/>
        <activity
            android:name=".Advertiser.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Advertiser.CompanyInformationsActivity"
            android:theme="@style/AppThemeWhiteAndBlackNoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Advertiser.AdvertiserSignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Advertiser.AdvertiserSignInActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>